---
export interface Props {
  title: string;
  description: string;
  image?: string;
  lang?: string;
  canonical?: string;
  type?: string;
}

const {
  title,
  description,
  image = 'https://www.heritage.go.kr/gung/gogung1/images/ic-c1.jpg',
  lang = 'ko',
  canonical,
  type = 'website',
} = Astro.props;

const siteUrl = 'https://k-heritage.pages.dev';
const canonicalUrl = canonical || new URL(Astro.url.pathname, siteUrl).href;
---
<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalUrl} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={image} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content={type} />
  <meta property="og:site_name" content="K-Heritage Guide" />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={image} />

  <link rel="alternate" hreflang="ko" href={`${canonicalUrl}?lang=kr`} />
  <link rel="alternate" hreflang="en" href={`${canonicalUrl}?lang=en`} />
  <link rel="alternate" hreflang="ja" href={`${canonicalUrl}?lang=ja`} />
  <link rel="alternate" hreflang="zh" href={`${canonicalUrl}?lang=zh`} />
  <link rel="alternate" hreflang="x-default" href={canonicalUrl} />

  <script is:inline>
    (function(){
      var t=localStorage.getItem('theme');
      if(t==='dark'||(!t&&window.matchMedia('(prefers-color-scheme:dark)').matches)){
        document.documentElement.classList.add('dark');
      }
    })();
  </script>
</head>
<body>
  <!-- Google Translate banner -->
  <div id="gt-banner" class="gt-banner gt-hidden">
    <div class="container gt-inner">
      <span class="gt-label">Translate this page:</span>
      <div id="google_translate_element"></div>
      <button id="gt-close" class="gt-close" aria-label="Close">&times;</button>
    </div>
  </div>

  <!-- Fixed navigation -->
  <nav class="site-nav" id="site-nav">
    <div class="nav-inner">
      <a href="/" class="nav-logo">
        <span class="logo-icon">üèõ</span>
        K-Heritage Guide
      </a>
      <div class="nav-actions">
        <button id="gt-toggle" class="nav-icon-btn" aria-label="Translate" title="Translate to your language">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10A15.3 15.3 0 0 1 12 2z"/></svg>
        </button>
        <button id="theme-toggle" class="nav-icon-btn" aria-label="Toggle dark mode" title="Toggle dark mode">
          <svg id="icon-sun" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><line x1="12" y1="1" x2="12" y2="3"/><line x1="12" y1="21" x2="12" y2="23"/><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/><line x1="1" y1="12" x2="3" y2="12"/><line x1="21" y1="12" x2="23" y2="12"/><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/></svg>
          <svg id="icon-moon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/></svg>
        </button>
        <div class="nav-divider"></div>
        <a href="?lang=kr" class={`nav-btn ${lang === 'ko' ? 'active' : ''}`}>ÌïúÍµ≠Ïñ¥</a>
        <a href="?lang=en" class={`nav-btn ${lang === 'en' ? 'active' : ''}`}>EN</a>
        <a href="?lang=ja" class={`nav-btn ${lang === 'ja' ? 'active' : ''}`}>Êó•Êú¨Ë™û</a>
        <a href="?lang=zh" class={`nav-btn ${lang === 'zh' ? 'active' : ''}`}>‰∏≠Êñá</a>
      </div>
    </div>
  </nav>

  <slot />

  <footer>
    <div class="container">
      <p>Data provided by <a href="https://www.heritage.go.kr" target="_blank" rel="noopener">Korea Heritage Service</a></p>
      <p>&copy; 2026 K-Heritage Guide</p>
    </div>
  </footer>

  <!-- Nav scroll effect -->
  <script is:inline>
    (function(){
      var nav=document.getElementById('site-nav');
      window.addEventListener('scroll',function(){
        if(window.scrollY>60) nav.classList.add('scrolled');
        else nav.classList.remove('scrolled');
      });
    })();
  </script>

  <!-- Google Translate -->
  <script is:inline>
    (function(){
      var loaded=false,banner=document.getElementById('gt-banner'),
          toggle=document.getElementById('gt-toggle'),
          close=document.getElementById('gt-close');
      function loadGT(){
        if(loaded)return;loaded=true;
        window.googleTranslateElementInit=function(){
          new google.translate.TranslateElement({
            pageLanguage:'ko',
            includedLanguages:'en,ja,zh-CN,zh-TW,es,fr,de,pt,ru,ar,th,vi,id,ms,hi,it,nl,pl,tr,sv,uk',
            layout:google.translate.TranslateElement.InlineLayout.HORIZONTAL,
            autoDisplay:false
          },'google_translate_element');
        };
        var s=document.createElement('script');
        s.src='//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit';
        document.head.appendChild(s);
      }
      toggle.addEventListener('click',function(){
        banner.classList.toggle('gt-hidden');
        if(!banner.classList.contains('gt-hidden'))loadGT();
      });
      close.addEventListener('click',function(){banner.classList.add('gt-hidden');});
    })();
  </script>

  <!-- Dark mode toggle -->
  <script is:inline>
    (function(){
      var btn=document.getElementById('theme-toggle'),html=document.documentElement;
      function upd(){
        var d=html.classList.contains('dark');
        document.getElementById('icon-sun').style.display=d?'block':'none';
        document.getElementById('icon-moon').style.display=d?'none':'block';
      }
      upd();
      btn.addEventListener('click',function(){
        html.classList.toggle('dark');
        localStorage.setItem('theme',html.classList.contains('dark')?'dark':'light');
        upd();
      });
    })();
  </script>
</body>
</html>
